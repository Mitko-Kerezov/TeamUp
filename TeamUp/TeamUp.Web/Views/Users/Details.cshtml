@model TeamUp.Web.Models.UserDetailsViewModel
@{
    ViewBag.Title = "User Details";
}

<h2>@Model.Email</h2>
@if (ViewBag.CanInvite)
{
    @Html.ActionLink("Message me!", "Send", "Messages",new { id = Model.Id }, new { @class = "btn btn-success pull-right" })
    <div class="clearfix"></div>
}
<div class="row">
    <div class="col-lg-6">
        <h4>Categories I'm <em>interested</em> in</h4>
        @if (Model.ProgrammingCategories.Count == 0)
        {
            <p class="text-muted">None</p>
        }
        else
        {
            foreach (var category in Model.ProgrammingCategories)
            {
                <p class="text-primary col-lg-4">@category.Name</p>
            }
        }
    </div>
    <div class="col-lg-6">
        <h4>Things I <em>rock</em> at</h4>
        @if (Model.Skills.Count == 0)
        {
            <p class="text-muted">None</p>
        }
        else
        {
            foreach (var skill in Model.Skills)
            {
                <p class="text-success col-lg-4">@skill.Name</p>
            }
        }
    </div>
    
</div>
<div class="row text-center">
    <h4>Projects I'm <em>involved</em> in</h4>
    @Html.Partial("_MyProjectsPartial", Model.Projects)
</div>